
@{
	ViewBag.Title = "Index";
}

<div class="row mt-3">
	<div class="col col-3"></div>

	<div class="col col-6">
		<div class="card">
			<div class="card-body">
				@using (Html.BeginForm("LoginUsuario", "Ejercicio3", FormMethod.Post))
				{
					<div class="form-group">
						<label for="exampleInputUsuario">Usuario</label>
						<input type="text" class="form-control" id="exampleInputUsuario" aria-describedby="UsuarioHelp" placeholder="Ingresa tu Usuario" required name="usuario">
					</div>
					<div class="form-group">
						<label for="exampleInputPassword1">Password</label>
						<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required name="password">
					</div>
					<button type="submit" class="btn btn-outline-primary btn-block">Imgresar</button>
				}
			</div>
		</div>
	</div>

	<div class="col col-3"></div>

</div>

